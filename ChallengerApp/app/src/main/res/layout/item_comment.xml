<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivCommentUserPhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/photo_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/primary"
        android:id="@+id/tvCommentUserName"
        android:layout_toRightOf="@+id/ivCommentUserPhoto"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvCommentTimestamp"
        android:layout_toStartOf="@+id/tvCommentTimestamp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:id="@+id/tvComment"
        android:layout_below="@+id/tvCommentUserName"
        android:layout_alignLeft="@+id/tvCommentUserName"
        android:layout_alignStart="@+id/tvCommentUserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Timestamp"
        android:id="@+id/tvCommentTimestamp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/tvComment" />

</RelativeLayout>