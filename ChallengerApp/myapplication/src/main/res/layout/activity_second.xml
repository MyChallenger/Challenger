<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinutha.challenger.SecondActivity">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="200dp"
        android:id="@+id/ivBG"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_bg" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivProfileFG"
        android:layout_marginTop="47dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michael Johnson"
        android:id="@+id/tvName"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/ivProfileFG"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Francisco, CA"
        android:id="@+id/tvLocation"
        android:textSize="12dp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:layout_below="@+id/tvName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Challenges Accepted 12"
        android:id="@+id/tvChallengesCount"
        android:layout_below="@+id/ivBG"
        android:layout_toLeftOf="@+id/ivProfileFG"
        android:paddingLeft="10dp"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Points Earned 2000"
        android:id="@+id/tvPoints"
        android:layout_below="@+id/ivBG"
        android:layout_toRightOf="@+id/ivProfileFG"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last seen 3 days ago "
        android:id="@+id/tvLastSeen"
        android:background="@color/primary_blue"
        android:textColor="@color/white"
        android:layout_below="@+id/tvChallengesCount"
        android:layout_marginTop="51dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>
